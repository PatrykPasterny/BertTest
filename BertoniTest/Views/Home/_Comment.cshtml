
@model IEnumerable<BertoniTest.ViewModels.CommentViewModel>

<table>
    <tr>
        <th>Username</th>
        <th>E-mail</th>
        <th>Body</th>
    </tr>

    @foreach (var comment in Model)
    {
        <tr>
            <td>@comment.Name</td>
            <td>@comment.Email</td>
            <td>@comment.Body</td>
        </tr>
    }
</table>